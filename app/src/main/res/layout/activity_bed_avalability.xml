<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BedAvalability" >

    <TextView
        android:id="@+id/unamelogo"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="@drawable/unamelogo"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/uname"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="RabbiyaSheikh"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="80dp"
        android:text="Avalability of beds at"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/HospitalName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingLeft="80dp"
        android:text="Agha Khan Hospital"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="ID:B1"
                android:textColor="@android:color/background_dark"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imageB1"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/bed1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="ID:B2"
                android:textColor="@android:color/background_dark"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imageB2"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/bed1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="ID:B3"
                android:textColor="@android:color/background_dark"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/imageB3"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/bed1" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="ID:B4"
                android:textColor="@android:color/background_dark"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imageB4"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/bed1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="ID:B5"
                android:textColor="@android:color/background_dark"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imageB5"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/bed1" />


        </LinearLayout>
    </LinearLayout>


</LinearLayout>